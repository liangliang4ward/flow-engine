<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aicoding.flow.mapper.FlowInstanceMapper">

    <select id="selectByBusinessIdAndType" resultType="com.aicoding.flow.entity.FlowInstance">
        SELECT * FROM flow_instance WHERE business_id = #{businessId} AND business_type = #{businessType}
    </select>

    <select id="selectByDefinitionId" resultType="com.aicoding.flow.entity.FlowInstance">
        SELECT * FROM flow_instance WHERE definition_id = #{definitionId}
    </select>

</mapper>