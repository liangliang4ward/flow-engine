<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aicoding.flow.mapper.FlowEdgeMapper">

    <select id="selectByDefinitionId" resultType="com.aicoding.flow.entity.FlowEdge">
        SELECT * FROM flow_edge WHERE definition_id = #{definitionId}
    </select>

    <select id="selectByDefinitionIdAndSourceNodeId" resultType="com.aicoding.flow.entity.FlowEdge">
        SELECT * FROM flow_edge WHERE definition_id = #{definitionId} AND source_node_id = #{sourceNodeId}
    </select>

</mapper>